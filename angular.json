{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "simple-budget-tracker": {
      "root": "",
      "sourceRoot": ".",
      "projectType": "application",
      "prefix": "app",
      "schematics": {
        "@schematics/angular:component": { "style": "scss", "skipTests": true },
        "@schematics/angular:directive": { "skipTests": true },
        "@schematics/angular:module": { "skipTests": true },
        "@schematics/angular:service": { "skipTests": true }
      },
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/index.ts",
            "tsConfig": "tsconfig.json",
            "aot": false,
            "extractCss": true,
            "extractLicenses": false,
            "styles": [ "src/index.scss" ],
            "scripts": [],
            "assets": [
              {
                "glob": "favicon.ico",
                "input": "src/assets/",
                "output": "/assets"
              },
              {
                "glob": "robots.txt",
                "input": "src/assets/",
                "output": "/"
              },
              {
                "glob": "_redirects",
                "input": "src/assets/",
                "output": "/"
              }
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "aot": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [{
                "type": "initial",
                "maximumWarning": "2mb",
                "maximumError": "5mb"
              }, {
                "type": "anyComponentStyle",
                "maximumWarning": "6kb",
                "maximumError": "10kb"
              }]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "simple-budget-tracker:build",
            "port": 3000,
            "progress": false,
            "sourceMap": {
              "scripts": true,
              "styles": false,
              "vendor": false
            }
          },
          "configurations": {
            "production": { "browserTarget": "simple-budget-tracker:build:production" }
          }
        }
      }
    }},
  "defaultProject": "simple-budget-tracker"
}
