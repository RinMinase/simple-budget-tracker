{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2015",
    "typeRoots": [ "node_modules/@types" ],
    "lib": [ "es2018", "dom" ],
    "types": [ "node" ],
    "paths": {
      "@app/*": ["src/app/*"],
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "files": [ "src/index.ts" ],
  "include": [ "src/**/*.ts" ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
